# ====================
# Banco de Dados
# ====================
# Para desenvolvimento local (SQLite):
DATABASE_URL="file:./prisma/dev.db"
# Para produção (PostgreSQL):
# DATABASE_URL="postgresql://user:password@host:5432/airx_prod"

# ====================
# Autenticação
# ====================
# Gerar com: openssl rand -base64 32
NEXTAUTH_SECRET="seu-secret-aleatorio-aqui"
NEXTAUTH_URL="http://localhost:3000"

# Ajuste para "false" em produção para bloquear auto-registro
ALLOW_SELF_SIGNUP="true"

# ====================
# Sistema de Emails (Resend)
# ====================
# Obter API Key em: https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email de origem (precisa configurar domínio no Resend)
EMAIL_FROM="Air X Control <noreply@seudominio.com>"

# URL pública do app (para links nos emails)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ====================
# Sistema de Pagamentos (Stripe)
# ====================
# Obter em: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Webhook secret (obter ao criar webhook no Stripe Dashboard)
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# IDs dos preços/produtos (criar no Stripe Dashboard > Products)
STRIPE_PRO_PRICE_ID="price_xxxxxxxxxxxx"
STRIPE_ENTERPRISE_PRICE_ID="price_xxxxxxxxxxxx"
